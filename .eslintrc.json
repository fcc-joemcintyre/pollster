{
  "extends": "airbnb",

  "env": {
    "browser":true ,
    "node": true,
    "mocha": true
  },

  "rules": {
    "arrow-body-style": ["error", "always"],
    "func-names": "off",
    "newline-per-chained-call": "off",
    "no-console": "off",
    "no-else-return": "off",
    "no-spaced-func": "off",
    "no-underscore-dangle": "off",
    "no-use-before-define": "off",
    "space-before-function-paren": ["error", "always"],
    "space-unary-ops": [2, {
      "words": true,
      "nonwords": true,
      "overrides": {
        "+": false,
        "-": false
      }
    }],

    "jsx-quotes": ["error", "prefer-single"]
  }
}
