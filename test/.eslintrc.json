{
  "extends": [
    "../eslint-rules/node.js"
  ],

  "env": {
    "mocha": true
  },

  "rules": {
    "max-nested-callbacks": "off",
    "no-console": "off",
    "no-undefined": "off",
    "prefer-arrow-callback": "off",

    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  }
}
