{
  "name": "@cygns/validators",
  "author": "Joe McIntyre (j_h_mcintyre@yahoo.com)",
  "description": "Field validators",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "module": "./lib/index.js",
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules ../../node_modules/.bin/jest",
    "lint": "eslint --ext .js,.ts,.tsx --no-error-on-unmatched-pattern .",
    "coverage": "node --experimental-vm-modules ../../node_modules/.bin/jest --coverage"
  },
  "devDependencies": {
    "@cygns/eslint-config-node": "6.0.0",
    "@types/jest": "27.4.0",
    "@typescript-eslint/parser": "5.10.2",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.25.4",
    "jest": "27.4.7",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html"
    ]
  }
}
