{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable"],
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": [
    "./src"
  ]
}