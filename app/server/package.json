{
  "name": "pollster-server",
  "author": "Joe McIntyre (j_h_mcintyre@yahoo.com)",
  "description": "Poll tracking application",
  "private": true,
  "type": "module",
  "version": "1.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/fcc-joemcintyre/pollster"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "8.9.0",
    "cookie-session": "1.4.0",
    "express": "4.17.2",
    "helmet": "4.6.0",
    "mongodb": "4.3.1",
    "passport": "0.5.2",
    "passport-local": "1.0.0"
  },
  "scripts": {
    "build": "npm run build:copy && tsc",
    "build:copy": "mkdir -p ../../dist/public && mkdir -p ../../dist/schema && cp -r public/* ../../dist/public && cp -r schema/* ../../dist/schema",
    "dev": "nodemon --watch public --watch schema --exec 'npm run build:copy' & tsc -w",
    "test": "mocha",
    "lint": "eslint src/*.js && eslint test/**",
    "start": "node dist/main.js --port=3000",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@cygns/eslint-config-node": "6.0.0",
    "@types/cookie-session": "2.0.44",
    "@types/express": "4.17.13",
    "@types/mocha": "9.1.0",
    "@types/passport": "1.0.7",
    "@types/passport-local": "1.0.34",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.25.4",
    "mocha": "9.2.0",
    "nodemon": "2.0.15",
    "typescript": "4.5.5",
    "ts-node": "10.5.0"
  }
}
