{
  "name": "pollster-server",
  "author": "Joe McIntyre (j_h_mcintyre@yahoo.com)",
  "description": "Poll tracking application",
  "private": true,
  "type": "module",
  "version": "1.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/fcc-joemcintyre/pollster"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "6.12.6",
    "cookie-session": "1.4.0",
    "express": "4.17.1",
    "helmet": "4.2.0",
    "mongodb": "3.6.2",
    "passport": "0.4.1",
    "passport-local": "1.0.0"
  },
  "scripts": {
    "dev": "nodemon -q -w app/server -e js,html --exec 'npm run build' ",
    "build": "mkdir -p ../../dist/public && cp -r src/* ../../dist && cp -r public/* ../../dist/public",
    "test": "mocha test/**/*",
    "lint": "eslint src/*.js && eslint test/**",
    "start": "node dist/main.js --port=3000"
  },
  "devDependencies": {
    "@cygns/eslint-config-node": "5.1.0",
    "chai": "4.2.0",
    "cross-env": "7.0.2",
    "eslint": "7.12.1",
    "eslint-plugin-import": "2.22.1",
    "fetch-cookie": "0.11.0",
    "mocha": "8.2.1",
    "nock": "13.0.4",
    "node-fetch": "2.6.1",
    "nodemon": "2.0.7",
    "nyc": "15.1.0"
  },
  "engines": {
    "node": "^14.15"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/public/js/*"
    ]
  }
}
