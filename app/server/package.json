{
  "name": "pollster-server",
  "author": "Joe McIntyre (j_h_mcintyre@yahoo.com)",
  "description": "Poll tracking application",
  "private": true,
  "type": "module",
  "version": "1.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/fcc-joemcintyre/pollster"
  },
  "license": "MIT",
  "dependencies": {
    "ajv": "8.11.0",
    "cookie-session": "2.0.0",
    "express": "4.17.3",
    "helmet": "5.0.2",
    "mongodb": "4.5.0",
    "passport": "0.5.2",
    "passport-local": "1.0.0"
  },
  "scripts": {
    "build": "npm run build:copy && tsc",
    "build:copy": "mkdir -p ../../dist/public && mkdir -p ../../dist/schema && cp -r public/* ../../dist/public && cp -r src/schema/* ../../dist/schema",
    "dev": "nodemon --watch public --watch schema --exec 'npm run build:copy' & tsc -w",
    "test": "mocha && npm run postman:run",
    "postman:run": "cd postman && node --loader ts-node/esm test-api.ts",
    "postman:server": "cd postman && node --loader ts-node/esm test-api.ts --server",
    "lint": "eslint --ext .js,.ts,.tsx --no-error-on-unmatched-pattern .",
    "start": "node dist/main.js --port=3000",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@cygns/eslint-config-node": "6.0.0",
    "@types/cookie-session": "2.0.44",
    "@types/express": "4.17.13",
    "@types/mocha": "9.1.0",
    "@types/newman": "5.3.0",
    "@types/passport": "1.0.7",
    "@types/passport-local": "1.0.34",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "earljs": "0.2.3",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.26.0",
    "mocha": "9.2.2",
    "newman": "5.3.2",
    "nodemon": "2.0.15",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  }
}
