{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": { "type": "string", "maxLength": 30 },
    "choices": {
      "type": "array",
      "items": {
        "type": "string", "maxLength": 30
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "voteLimit": { "type": "boolean" },
    "maxVotes": { "type": "integer" },
    "dateLimit": { "type": "boolean" },
    "endDate": { "type": "string" }

  },
  "required": ["title", "choices", "voteLimit", "maxVotes", "dateLimit", "endDate"],
  "additionalProperties": false
}
